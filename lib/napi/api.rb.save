require 'httparty'

module Napi
  class Newsapi
    include HTTParty
    base_uri 'https://newsapi.org/v2'

    attr_reader :api_key

    def initialize(api_key)
      @api_key = api_key
    end



#query params:
#:country
#:category
#:sources
#:q
#:pageSize
#:page
def top_headlines(options = {})
  options.merge!({ apiKey => api_key })
  self.class.get('/top-headlines/get', options)
end




private

apiKey = '8be3133fee004afe9866824a491f4e83'

end
end

